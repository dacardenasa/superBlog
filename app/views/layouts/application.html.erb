<!DOCTYPE html>
<html>
  <head>
    <title>SuperBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-light bg-light">
      <div class="container">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="<%= posts_path %>">SuperBlog<span class="sr-only">(current)</span></a>
            </li>
          </ul>
          <% if signed_in? %>
            <ul class="nav navbar-nav">
              <li class="mr-2"><%= link_to "Nuevo Post", new_post_path, class: "nav-link" %></li>
              <li><%= link_to "Salir", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
            </ul>
          <% else %>
            <ul class="nav navbar-nav">
              <li class="mr-2"><%= link_to "Registrarse", new_user_registration_path, class: "nav-link" %></li>
            </ul>
            <ul class="nav navbar-nav">
              <li><%= link_to "Ingresar", new_user_session_path, class:"nav-link" %></li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>
    <%= yield %>
    <div class="container">
      <% if flash[:notice] %>
        <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
          <div class="text-center"><strong><%= flash[:notice] %></strong></div>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    </div>
  </body>
</html>
