<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-6 col-md-offset-3">
      <%= link_to "Volver", posts_path %>
      <h1><strong><%= form_title %></strong></h1>
      <!-- Show errors if submit form has -->
      <% if @errores %>
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
          <ul>
            <% @errores.each do | error | %>
              <li><%= error %></li>
            <% end %>
          </ul>  
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
      <%= form_for @post do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el titulo del tema" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, rows: 10, placeholder: "DescripciÃ³n del Post", class: "form-control input-lg" %>
        </div>
          <%= f.hidden_field :user_id, :value => current_user.id %>
          <%= f.submit form_submit, class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>