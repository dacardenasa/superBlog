<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-8 col-md-offset-2">
      <%= link_to "Volver", posts_path %>
      <h1><%= @post.title %></h1>
      <p class="mt-3"><%= @post.description %></p>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <div class="card mb-2">
            <div class="card-header">
              <%= comment.user.email %> hace <%= time_ago_in_words(comment.created_at) %> 
            </div>
            <div class="card-body">
              <p class="card-text"><%= comment.comentario %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-md-8 col-md-offset-2">
      <% if user_signed_in? %>
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.hidden_field :post_id, :value => @post.id %>
            <%= f.label :comentario, "Nuevo Comentario", class: "font-weight-bold" %>
            <%= f.text_area :comentario, rows: 3, class: "form-control" %>
          </div>
          <%= f.submit "Comentar", class: "btn btn-primary" %>
        <% end %>
      <% end %>
      <!-- Show errors if submit form has -->
      <% if @errores %>
        <div class="alert alert-danger mt-3" role="alert">
          <ul>
            <% @errores.each do | error | %>
              <li><%= error %></li>
            <% end %>
          </ul>  
        </div>
      <% end %>
    </div>
  </div>
</div>
